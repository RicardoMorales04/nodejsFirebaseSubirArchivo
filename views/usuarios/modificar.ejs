<%- include ("../templates/encabezado.ejs") %> 
<%- include ("../templates/menu.ejs") %> 

<div class="container mt-5">
    <form action="/editar" method="post" enctype="multipart/form-data">
        <div class="card">
            <div class="card-header">
                <h1>Modificar Usuario</h1>
            </div>
            <div class="card-body">
                <input type="hidden" name="id" id="id" value="<%= user.id%>">
                <input class="form-control mb-3" type="text" value="<%= user.nombre%>" name="nombre" placeholder="Nombre" autofocus>
                <input class="form-control mb-3" type="text" value="<%= user.usuario%>" name="usuario" placeholder="Usuario">
                <input class="form-control mb-3" type="password" value="<%= user.password%>" name="password" placeholder="Password">
                <input class="form-control mb-3" type="file" name="foto" id="foto">
            </div>
            <div class="card-footer">
                <button type="submit" class="form-control btn btn-primary">Modificar usuario</button>
            </div>
        </div>
    </form>
</div>

